all: dirs $(MODNAME).$(SHLIBEXT)

dirs:
	-mkdir $(BUILD_OBJ_DIR)
	-mkdir $(HLDLL_OBJ_DIR)
	-mkdir $(HLWPN_OBJ_DIR)
	-mkdir $(OP4_OBJ_DIR)
	-mkdir $(ROPE_OBJ_DIR)
	-mkdir $(PM_OBJ_DIR)
	-mkdir $(GAME_SHARED_OBJ_DIR)
	-mkdir $(MINISTL_OBJ_DIR)

$(MODNAME).$(SHLIBEXT): $(HLDLL_OBJS) $(HLWPN_OBJS) $(PM_OBJS) $(GAME_SHARED_OBJS) $(MINISTL_OBJS) $(ROPE_OBJS)
	$(CC) $(LDFLAGS) $(SHLIBLDFLAGS) -o $(BUILD_DIR)/$@ $(HLDLL_OBJS) $(HLWPN_OBJS) $(PM_OBJS) $(GAME_SHARED_OBJS) $(MINISTL_OBJS) $(ROPE_OBJS)
	./gendbg.sh $(BUILD_DIR)/$(MODNAME).$(SHLIBEXT)
	
$(HLWPN_OBJ_DIR)/%.o : $(HLWPN_SRC_DIR)/%.cpp
	$(DO_HLWPN_CC)

$(HLDLL_OBJ_DIR)/%.o : $(HLDLL_SRC_DIR)/%.cpp
	$(DO_HLDLL_CC)

$(OP4_OBJ_DIR)/%.o : $(OP4_SRC_DIR)/%.cpp
	$(DO_OP4_CC)

$(ROPE_OBJ_DIR)/%.o : $(ROPE_SRC_DIR)/%.cpp
	$(DO_ROPE_CC)

$(PM_OBJ_DIR)/%.o : $(PM_SRC_DIR)/%.cpp
	$(DO_PM_CC)

$(GAME_SHARED_OBJ_DIR)/%.o : $(GAME_SHARED_SRC_DIR)/%.cpp
	$(DO_GAME_SHARED_CC)

$(MINISTL_OBJ_DIR)/%.o : $(MINISTL_SRC_DIR)/%.cpp
	$(DO_MINISTL_CC)

clean:
	-rm -rf $(MINISTL_OBJ_DIR)
	-rm -rf $(GAME_SHARED_OBJ_DIR)
	-rm -rf $(PM_OBJ_DIR)
	-rm -rf $(HLWPN_OBJ_DIR)
	-rm -rf $(HLDLL_OBJ_DIR)
	-rm -rf $(OP4_OBJ_DIR)
	-rm -rf $(ROPE_OBJ_DIR)
	-rm -f hl_$(ARCH).$(SHLIBEXT)
